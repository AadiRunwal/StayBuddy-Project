<% layout("/Layouts/boilerplate.ejs") %>
<body>
    <br>
    <h3 style="margin: 0.3rem 5rem;">All Listings</h3>
    <br>
    <div class="all-Listings">
        <% if(!allListings.length){ %>
            <p>No Listings Added.</p>
        <% } %>
        <% for(let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>">
                    <div class="card listing-card">
                        <img src="<%= listing.image.url %>" class="card-image allListing-image" alt="listing image" style="height: 20rem;">
                        <!-- overlay effect on image -->
                        <div class="card-img-overlay"></div>

                        <div class="card-body">
                            <p class="card-text allListing-text"><b><%= listing.title %></b></p>
                            <p class="card-text allListing-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
                        </div>
                    </div>
                </a>
        <% } %>
    </div>
</body>